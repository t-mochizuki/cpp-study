<%# erb name=foo_bar -T - class.erb -%>
<%
  def snake_to_pascal(str)
    str.split('_').map(&:capitalize).join
  end
-%>
#ifndef <%= name.upcase %>
#define <%= name.upcase %> 1

namespace design {

#include <iostream>
#include <string>

using std::cout;
using std::endl;
using std::string;

class <%= snake_to_pascal(name) %> {
private:

    string name;

public:

    <%= snake_to_pascal(name) %>(): name("") {}
    <%= snake_to_pascal(name) %>(string name): name(name) {}
    virtual ~<%= snake_to_pascal(name) %>() {}
};

} // namespace design

#endif // <%= name.upcase %>
