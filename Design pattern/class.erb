<%# erb name=foo_bar -T - class.erb -%>
<%
  def snake_to_pascal(str)
    str.split('_').map(&:capitalize).join
  end
-%>
#ifndef <%= name.upcase %>
#define <%= name.upcase %> 1

namespace design {

#include <iostream>

using std::cout;
using std::endl;

class <%= snake_to_pascal(name) %> {
private:

public:

    <%= snake_to_pascal(name) %>() {}
    virtual ~<%= snake_to_pascal(name) %>() {}
};

} // namespace design

#endif // <%= name.upcase %>
